# ===========================================
# POLYX ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values
# Railway will detect these and prompt you to set them

# -------------------------------------------
# DATABASE (Required)
# -------------------------------------------
# Supabase PostgreSQL connection string
# Railway: Add a PostgreSQL service and it will auto-fill this
DATABASE_URL="postgresql://postgres:password@localhost:5432/polyx"

# -------------------------------------------
# AUTHENTICATION (Required)
# -------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-random-32-char-string-here"

# Your production URL (Railway will auto-detect this)
NEXTAUTH_URL="https://your-app.up.railway.app"

# Google OAuth (Optional - for Google sign-in)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -------------------------------------------
# STRIPE (Required for subscriptions)
# -------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_..."

# Create products in Stripe Dashboard, then copy price IDs
# Products > Create Product > Copy the price ID
STRIPE_PRICE_PRO="price_..."
STRIPE_PRICE_BUSINESS="price_..."

# Webhooks > Add endpoint > Copy signing secret
# Endpoint URL: https://your-app.up.railway.app/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_..."

# -------------------------------------------
# EMAIL (Required for verification)
# -------------------------------------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_..."

# Your verified sending domain (or use resend.dev for testing)
RESEND_FROM_EMAIL="Polyx <noreply@yourdomain.com>"

# -------------------------------------------
# LICENSE SYSTEM (Required)
# -------------------------------------------
# Generate with: openssl rand -hex 32
LICENSE_SECRET="generate-a-random-64-char-hex-string"

# -------------------------------------------
# API CONFIGURATION
# -------------------------------------------
# Your API server URL (if running separately)
NEXT_PUBLIC_API_URL="https://your-api.up.railway.app"
NEXT_PUBLIC_WS_URL="wss://your-api.up.railway.app"

# API Server port
PORT=3001

# Frontend URL for CORS
FRONTEND_URL="https://your-app.up.railway.app"

# -------------------------------------------
# EXTERNAL API KEYS (Optional)
# -------------------------------------------
# For token data - get from respective services
BIRDEYE_API_KEY=""
HELIUS_API_KEY=""
MORALIS_API_KEY=""

# Redis for caching (Optional - Railway can add this as a service)
REDIS_URL=""
