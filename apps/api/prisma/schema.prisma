generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id             String   @id @default(cuid())
  address        String   @unique
  symbol         String
  name           String
  decimals       Int
  logoUri        String?
  description    String?
  website        String?
  twitter        String?
  telegram       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Cached market data
  price          Float?
  priceChange24h Float?
  volume24h      Float?
  marketCap      Float?
  liquidity      Float?

  ohlcv OHLCV[]

  @@index([symbol])
  @@index([marketCap])
  @@index([volume24h])
  @@index([createdAt])
}

model OHLCV {
  id        String   @id @default(cuid())
  tokenId   String
  token     Token    @relation(fields: [tokenId], references: [id], onDelete: Cascade)

  timestamp DateTime
  timeframe String   // "1m", "5m", "15m", "1h", "4h", "1d"
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float

  @@unique([tokenId, timestamp, timeframe])
  @@index([tokenId, timeframe, timestamp])
}

model Watchlist {
  id        String   @id @default(cuid())
  sessionId String
  tokenId   String
  createdAt DateTime @default(now())

  @@unique([sessionId, tokenId])
  @@index([sessionId])
}

// ==========================================
// User Authentication Models (Supabase PostgreSQL)
// ==========================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?   // Null for OAuth-only users
  name          String?
  image         String?
  emailVerified DateTime?

  // Email verification
  verificationCode   String?
  verificationExpiry DateTime?

  // Two-factor authentication
  twoFactorEnabled Boolean  @default(false)
  twoFactorSecret  String?  // TOTP secret (encrypted)

  // Solana wallet (generated on first sign-in)
  walletAddress    String?   @unique  // Public key
  walletEncrypted  String?   @db.Text // Encrypted private key

  // OAuth accounts
  accounts      Account[]
  sessions      Session[]

  // Subscription link
  subscription  Subscription?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([walletAddress])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// Subscription & Licensing Models
// ==========================================

enum SubscriptionPlan {
  FREE
  PRO
  BUSINESS
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  EXPIRED
}

model Subscription {
  id                   String             @id @default(cuid())
  email                String             @unique
  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)

  // Link to User (optional - for users who have accounts)
  userId               String?            @unique
  user                 User?              @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Stripe integration
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique

  // Domain licensing
  domains              Domain[]

  // Usage tracking
  embedViews           Int                @default(0)
  embedViewsResetAt    DateTime           @default(now())

  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@index([email])
  @@index([stripeCustomerId])
  @@index([userId])
}

model Domain {
  id             String       @id @default(cuid())
  domain         String       // e.g., "example.com" or "*.example.com"
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  isVerified     Boolean      @default(false)
  verifyToken    String?      // For DNS TXT verification

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([domain, subscriptionId])
  @@index([domain])
  @@index([subscriptionId])
}

// Track embed usage for analytics
model EmbedView {
  id             String   @id @default(cuid())
  domain         String   // Referrer domain
  tokenAddress   String   // Token being viewed
  timestamp      DateTime @default(now())

  @@index([domain, timestamp])
  @@index([tokenAddress, timestamp])
}

// ==========================================
// Pulse Token Cache (pump.fun discovery)
// ==========================================

enum PulseCategory {
  NEW           // Just launched on pump.fun
  GRADUATING    // Near bonding curve completion ($15K-$69K MC)
  GRADUATED     // Migrated to Raydium/PumpSwap
}

model PulseToken {
  id              String        @id @default(cuid())
  address         String        @unique
  symbol          String
  name            String
  logoUri         String?
  description     String?       @db.Text

  // Market data
  price           Float         @default(0)
  priceChange24h  Float         @default(0)
  volume24h       Float         @default(0)
  marketCap       Float         @default(0)
  liquidity       Float         @default(0)

  // Pulse-specific
  category        PulseCategory @default(NEW)
  bondingProgress Float?        // 0-100% for graduating tokens
  txCount         Int           @default(0)
  replyCount      Int           @default(0)

  // Socials
  twitter         String?
  telegram        String?
  website         String?

  // Timestamps
  tokenCreatedAt  DateTime?     // When token was created on pump.fun
  graduatedAt     DateTime?     // When token graduated to Raydium
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([category, marketCap])
  @@index([category, tokenCreatedAt])
  @@index([address])
}

// ==========================================
// API Cache Models (to reduce external API calls)
// ==========================================

// Cache SOL/token prices (shared with web)
model PriceCache {
  id        String   @id @default(cuid())
  symbol    String   @unique  // e.g., "SOL", "BTC", "ETH"
  priceUsd  Float
  updatedAt DateTime @updatedAt

  @@index([symbol])
}

// Cache OHLCV candles by token address (no Token record required)
model CandleCache {
  id          String   @id @default(cuid())
  tokenAddress String  // Token mint address
  timeframe   String   // "1m", "5m", "15m", "1h", "4h", "1d"
  timestamp   DateTime // Candle open time
  open        Float
  high        Float
  low         Float
  close       Float
  volume      Float

  updatedAt   DateTime @updatedAt

  @@unique([tokenAddress, timeframe, timestamp])
  @@index([tokenAddress, timeframe, timestamp(sort: Desc)])
}

// ==========================================
// Permanent Swap Storage (not cache - permanent historical record)
// ==========================================

// All token swaps - permanent storage, synced from Moralis then only fetch new
model TokenSwap {
  id              String   @id @default(cuid())
  tokenAddress    String   // Token mint address
  txHash          String   // Transaction hash
  timestamp       DateTime // Block timestamp
  type            String   // "buy" or "sell"
  walletAddress   String
  tokenAmount     Float    // Amount of the token traded
  solAmount       Float    // Amount of SOL
  priceUsd        Float    // Token price in USD at trade time
  totalValueUsd   Float    // Total trade value in USD

  @@unique([tokenAddress, txHash])
  @@index([tokenAddress, timestamp(sort: Desc)], map: "TokenSwap_addr_ts_desc")
  @@index([tokenAddress, timestamp(sort: Asc)], map: "TokenSwap_addr_ts_asc")
}

// Track sync status per token - so we know what to fetch next
model TokenSyncStatus {
  id              String   @id @default(cuid())
  tokenAddress    String   @unique

  // Swap sync status
  swapsSynced     Boolean  @default(false) // True once all historical swaps fetched
  oldestSwapTime  DateTime? // Oldest swap we have
  newestSwapTime  DateTime? // Newest swap we have
  totalSwaps      Int       @default(0)
  lastSwapSync    DateTime?

  // Token metadata sync
  metadataSynced  Boolean  @default(false)
  lastMetadataSync DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([tokenAddress])
  @@index([swapsSynced])
}
