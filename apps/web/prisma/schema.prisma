generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id             String   @id @default(cuid())
  address        String   @unique
  symbol         String
  name           String
  decimals       Int
  logoUri        String?
  description    String?
  website        String?
  twitter        String?
  telegram       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Cached market data
  price          Float?
  priceChange24h Float?
  volume24h      Float?
  marketCap      Float?
  liquidity      Float?

  ohlcv OHLCV[]

  @@index([symbol])
  @@index([marketCap])
  @@index([volume24h])
  @@index([createdAt])
}

model OHLCV {
  id        String   @id @default(cuid())
  tokenId   String
  token     Token    @relation(fields: [tokenId], references: [id], onDelete: Cascade)

  timestamp DateTime
  timeframe String   // "1m", "5m", "15m", "1h", "4h", "1d"
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float

  @@unique([tokenId, timestamp, timeframe])
  @@index([tokenId, timeframe, timestamp])
}

model Watchlist {
  id        String   @id @default(cuid())
  sessionId String
  tokenId   String
  createdAt DateTime @default(now())

  @@unique([sessionId, tokenId])
  @@index([sessionId])
}

// ==========================================
// User Authentication Models (Supabase PostgreSQL)
// ==========================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?   // Null for OAuth-only users
  name          String?
  image         String?
  emailVerified DateTime?

  // Email verification
  verificationCode   String?
  verificationExpiry DateTime?

  // Two-factor authentication
  twoFactorEnabled Boolean  @default(false)
  twoFactorSecret  String?  // TOTP secret (encrypted)

  // Solana wallet (generated on first sign-in)
  walletAddress    String?   @unique  // Public key
  walletEncrypted  String?   @db.Text // Encrypted private key

  // OAuth accounts
  accounts      Account[]
  sessions      Session[]

  // Subscription link
  subscription  Subscription?

  // Trading history
  trades        Trade[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([walletAddress])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// Subscription & Licensing Models
// ==========================================

enum SubscriptionPlan {
  FREE
  PRO
  BUSINESS
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  EXPIRED
}

model Subscription {
  id                   String             @id @default(cuid())
  email                String             @unique
  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)

  // Link to User (optional - for users who have accounts)
  userId               String?            @unique
  user                 User?              @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Stripe integration
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique

  // License key (encrypted format for embed validation)
  licenseKey           String?            @unique

  // Domain licensing
  domains              Domain[]

  // Usage tracking
  embedViews           Int                @default(0)
  embedViewsResetAt    DateTime           @default(now())

  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@index([email])
  @@index([stripeCustomerId])
  @@index([userId])
  @@index([licenseKey])
}

model Domain {
  id             String       @id @default(cuid())
  domain         String       // e.g., "example.com" or "*.example.com"
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  isVerified     Boolean      @default(false)
  verifyToken    String?      // For DNS TXT verification

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([domain, subscriptionId])
  @@index([domain])
  @@index([subscriptionId])
}

// Track embed usage for analytics
model EmbedView {
  id             String   @id @default(cuid())
  domain         String   // Referrer domain
  tokenAddress   String   // Token being viewed
  timestamp      DateTime @default(now())

  @@index([domain, timestamp])
  @@index([tokenAddress, timestamp])
}

// ==========================================
// Price Cache (to avoid rate limiting external APIs)
// ==========================================

model PriceCache {
  id        String   @id @default(cuid())
  symbol    String   @unique  // e.g., "SOL", "BTC", "ETH"
  priceUsd  Float
  updatedAt DateTime @updatedAt

  @@index([symbol])
}

// ==========================================
// Polymarket Cache (to avoid rate limiting)
// ==========================================

model PolymarketEvent {
  id              String   @id  // Polymarket event ID
  slug            String   @unique
  title           String
  description     String?  @db.Text
  category        String?
  image           String?
  icon            String?
  volume          Float    @default(0)
  liquidity       Float    @default(0)
  startDate       DateTime?
  endDate         DateTime
  active          Boolean  @default(true)
  closed          Boolean  @default(false)

  markets         PolymarketMarket[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([volume])
  @@index([active, closed])
}

model PolymarketMarket {
  id              String   @id  // Polymarket market ID
  eventId         String
  event           PolymarketEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  question        String
  outcome         String   // "Yes", "No", or specific outcome name
  probability     Float    @default(0.5)
  tokenId         String?  // CLOB token ID for price history
  volume          Float    @default(0)

  priceHistory    PolymarketPriceHistory[]

  updatedAt       DateTime @updatedAt

  @@index([eventId])
  @@index([tokenId])
}

model PolymarketPriceHistory {
  id              String   @id @default(cuid())
  marketId        String
  market          PolymarketMarket @relation(fields: [marketId], references: [id], onDelete: Cascade)

  timestamp       DateTime
  probability     Float

  @@unique([marketId, timestamp])
  @@index([marketId, timestamp])
}

// ==========================================
// API Cache Models (to reduce external API calls)
// ==========================================

// Cache OHLCV candles by token address (no Token record required)
model CandleCache {
  id          String   @id @default(cuid())
  tokenAddress String  // Token mint address
  timeframe   String   // "1m", "5m", "15m", "1h", "4h", "1d"
  timestamp   DateTime // Candle open time
  open        Float
  high        Float
  low         Float
  close       Float
  volume      Float

  updatedAt   DateTime @updatedAt

  @@unique([tokenAddress, timeframe, timestamp])
  @@index([tokenAddress, timeframe, timestamp(sort: Desc)])
}

// Cache token prices from Jupiter/other sources
model TokenPriceCache {
  id           String   @id @default(cuid())
  tokenAddress String   @unique  // Token mint address
  priceUsd     Float
  priceChange24h Float?
  volume24h    Float?
  updatedAt    DateTime @updatedAt

  @@index([tokenAddress])
}

// Cache wallet balances to reduce RPC calls
model WalletBalanceCache {
  id            String   @id @default(cuid())
  walletAddress String
  tokenAddress  String   // "SOL" for native SOL, or token mint
  balance       String   // Raw balance as string for precision
  decimals      Int      @default(9)
  updatedAt     DateTime @updatedAt

  @@unique([walletAddress, tokenAddress])
  @@index([walletAddress])
}

// ==========================================
// Trading Models
// ==========================================

enum TradeStatus {
  PENDING      // Quote generated, awaiting execution
  SUBMITTED    // Transaction submitted to network
  CONFIRMING   // Waiting for confirmation
  SUCCESS      // Trade completed
  FAILED       // Trade failed
  EXPIRED      // Quote expired before execution
}

model Trade {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Token details
  inputMint       String      // Input token mint address
  inputSymbol     String      // e.g., "SOL"
  outputMint      String      // Output token mint address
  outputSymbol    String      // e.g., "BONK"

  // Amounts (stored as strings for precision)
  amountIn        String      // Amount of input token (raw)
  amountOut       String      // Amount of output token (raw)
  amountOutMin    String      // Minimum output (slippage protected)

  // Price info
  pricePerToken   Float?      // Price per output token in input token
  priceImpact     Float?      // Price impact percentage

  // USD values at time of trade (for PnL calculations)
  inputUsdValue   Float?      // USD value of input at trade time
  outputUsdValue  Float?      // USD value of output at trade time
  solPriceUsd     Float?      // SOL/USD price at trade time

  // Transaction
  txSignature     String?     @unique
  status          TradeStatus @default(PENDING)
  errorMessage    String?

  // Fees
  platformFee     String?     // Platform fee in lamports
  networkFee      String?     // Network fee in lamports

  // Timestamps
  createdAt       DateTime    @default(now())
  confirmedAt     DateTime?

  @@index([userId, createdAt])
  @@index([txSignature])
  @@index([status])
}
